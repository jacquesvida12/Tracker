<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Calorie Database</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>
<body>
<%- include("_header") -%>

<div class="table-responsive-sm">
  <table class="table table-hover">
    <thead class="table-primary">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Meal</th>
            <th scope="col">Protein</th>
            <th scope="col">Carbs</th>
            <th scope="col">Fats</th>
            <th scope="col">Calories</th>
            <th scope="col">Date</th>
            <th scope="col">Time</th>
            <th scope="col">Notes</th>
            <th class="d-print-none">
                <a class="btn btn-sm btn-success" href="/create">Add</a>
        </tr>
    </thead>
    <tbody>
      <% for (const calories of model) { %>
        <tr>
            <td><%= calories.cal_id %></td>
            <td><%= calories.cal_name %></td>
            <td><%= calories.cal_meal %></td>
            <td><%= calories.cal_protein %></td>
            <td><%= calories.cal_carbs %></td>
            <td><%= calories.cal_fats %></td>
            <td><%= calories.cal_calories %></td>
            <td><%= calories.cal_date %></td>
            <td><%= calories.cal_time %></td>
            <td><%= calories.cal_notes %></td>
            <td class="d-print-none">
            <a class="btn btn-sm btn-warning" href="/edit/<%= calories.cal_id %>">Edit</a>
            <a class="btn btn-sm btn-danger" href="/delete/<%= calories.cal_id %>">Delete</a>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
  <h1>Total Meals: <%= model.length %></h1>
</div>

<%- include("_footer") -%>
</body>

</html>
